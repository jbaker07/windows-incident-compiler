{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://git-glue.io/edr/quality_report.schema.json",
  "title": "EDR Quality Report",
  "description": "Quality gates and regression analysis for a mission run",
  "type": "object",
  "required": ["schema_version", "run_id", "gates", "overall_verdict", "generated_at"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "run_id": {
      "type": "string",
      "pattern": "^[0-9]{8}_[0-9]{6}$"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "baseline_run_id": {
      "type": ["string", "null"],
      "description": "Run ID of the baseline used for regression comparison"
    },
    "gates": {
      "type": "object",
      "required": ["readiness", "telemetry", "extraction", "detection", "explainability", "performance"],
      "properties": {
        "readiness": {
          "$ref": "#/definitions/gate_result",
          "description": "Environment readiness gate"
        },
        "telemetry": {
          "$ref": "#/definitions/gate_result",
          "description": "Capture produced sufficient telemetry"
        },
        "extraction": {
          "$ref": "#/definitions/gate_result",
          "description": "Facts extracted from events"
        },
        "detection": {
          "$ref": "#/definitions/gate_result",
          "description": "Signals emitted from playbooks"
        },
        "explainability": {
          "$ref": "#/definitions/gate_result",
          "description": "Explain bundles are complete"
        },
        "performance": {
          "$ref": "#/definitions/gate_result",
          "description": "Resource usage within bounds"
        },
        "mission_specific": {
          "$ref": "#/definitions/gate_result",
          "description": "Mission-type-specific gate (e.g., noise rate for Discovery, required detections for Adversary)"
        }
      }
    },
    "overall_verdict": {
      "type": "string",
      "enum": ["pass", "warn", "fail"],
      "description": "Overall quality verdict"
    },
    "verdict_summary": {
      "type": "string",
      "description": "Human-readable summary of the verdict"
    },
    "regression": {
      "type": "object",
      "description": "Comparison against baseline run",
      "properties": {
        "baseline_run_id": { "type": "string" },
        "baseline_timestamp": { "type": "string", "format": "date-time" },
        "deltas": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/delta"
          }
        },
        "improved": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Metrics that improved"
        },
        "regressed": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Metrics that regressed"
        },
        "stable": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Metrics that stayed the same"
        }
      }
    },
    "mission_expectations": {
      "type": "object",
      "description": "Mission-specific expected outcomes and whether they were met",
      "properties": {
        "required_playbooks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "playbook_id": { "type": "string" },
              "expected": { "type": "boolean" },
              "matched": { "type": "boolean" }
            }
          }
        },
        "max_noise_signals": {
          "type": "object",
          "properties": {
            "threshold": { "type": "integer" },
            "actual": { "type": "integer" },
            "passed": { "type": "boolean" }
          }
        },
        "min_detections": {
          "type": "object",
          "properties": {
            "threshold": { "type": "integer" },
            "actual": { "type": "integer" },
            "passed": { "type": "boolean" }
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "action": { "type": "string" }
        }
      }
    }
  },
  "definitions": {
    "gate_result": {
      "type": "object",
      "required": ["name", "status", "score"],
      "properties": {
        "name": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["pass", "warn", "fail", "skip"]
        },
        "score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Gate score (0-100)"
        },
        "threshold": {
          "type": "number",
          "description": "Minimum score required to pass"
        },
        "details": {
          "type": "object",
          "additionalProperties": true,
          "description": "Gate-specific details"
        },
        "message": {
          "type": "string",
          "description": "Human-readable status message"
        }
      }
    },
    "delta": {
      "type": "object",
      "required": ["metric", "baseline_value", "current_value", "direction"],
      "properties": {
        "metric": { "type": "string" },
        "baseline_value": { "type": "number" },
        "current_value": { "type": "number" },
        "delta_absolute": { "type": "number" },
        "delta_percent": { "type": "number" },
        "direction": {
          "type": "string",
          "enum": ["improved", "regressed", "stable"]
        },
        "significance": {
          "type": "string",
          "enum": ["high", "medium", "low", "none"]
        }
      }
    }
  }
}
